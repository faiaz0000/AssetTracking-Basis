@model AssetTrackingSystem.Models.ViewModel.OrganizationBranchCreateVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .alert {
        width: 46.5%;
        margin: auto auto 5px auto;
    }
</style>



<div class="container">
    <div class="form_my_style">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success" id="success-alert">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <strong>Success! </strong>
                Branch have added to your list.
            </div>
        }
        @using (Html.BeginForm("Create", "OrganizationBranch", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <h2>Branch Setup</h2>

            <div class="form-group">
                <label for="country" class="col-sm-4 control-label">Organization</label>
                <div class="col-sm-8">

                    @Html.DropDownListFor(m => m.OrganizationBranch.OrganizationId, new SelectList(Model.OrganizationList, "Value", "Text"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.OrganizationBranch.OrganizationId)
                </div>
            </div>
            <!-- /.form-group -->

            <div class="form-group">
                @Html.LabelFor(m => m.OrganizationBranch.Name, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.OrganizationBranch.Name, new { @placeholder = "Branch Name", @class = "form-control", autofocus = true })
                    @*<span class="help-block">Last Name, First Name, eg.: Smith, Harry</span>*@
                    @Html.ValidationMessageFor(m => m.OrganizationBranch.Name, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.OrganizationBranch.ShortName, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.OrganizationBranch.ShortName, new { @placeholder = "Short Name", @class = "form-control", autofocus = true })
                    @*<span class="help-block">Last Name, First Name, eg.: Smith, Harry</span>*@
                    @Html.ValidationMessageFor(m => m.OrganizationBranch.ShortName, null, new { @class = "text-danger" })
                </div>
            </div>




            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4">
                    <button type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
            </div>
        }
    </div>


</div> <!-- ./container -->
